#define DEF 0
#define NUM 1
#define SYM 2
#define ADJ 3

&lt { quick_tap_ms = <200>; };

&mt { quick_tap_ms = <200>; };

// accentuated chars
ZMK_BEHAVIOR(a_with_circumflex, macro,
	wait-ms = <0>;
	tap-ms = <5>;
	bindings = <&kp FR_CIRC &kp FR_A>;
)

ZMK_BEHAVIOR(ht_a_circ, hold_tap,
       flavor = "tap-preferred";
       tapping-term-ms = <175>;
       global-quick-tap;
       bindings = <&a_with_circumflex>, <&kp>;
)

